@using AnimalStore.Web.ViewModels
@model AmbiguousLocationViewModel

<h2>Select Location</h2>
<ul>
  @foreach (var place in Model.Places)
  {
    <li>
      @Html.ActionLink(
        place.Name + ", " + place.Postcode, 
        "Dogs", 
        "Search", 
        new SearchViewModel
        {
          SelectedBreed = Model.SearchViewModel.SelectedBreed,
          IsNationalSearch = false,
          PageNumber = 1,                     
          PlaceId = place.PlacesID,
          Location = Model.SearchViewModel.Location,
        }, 
        null)
    </li>
  }
</ul>
